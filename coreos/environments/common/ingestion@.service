[Unit]
Description=Nitrogen Ingestion Service
After=docker.service
Requires=docker.service

[Service]
ExecStartPre=/usr/bin/docker pull nitrogen/ingestion:latest
ExecStart=/usr/bin/docker run --name ingestion -p 80:8080 nitrogen/ingestion
ExecStopPre=/usr/bin/docker kill ingestion
ExecStop=/usr/bin/docker rm ingestion
TimeoutStartSec=0
Restart=always
RestartSec=10s

[X-Fleet]
X-Conflicts=ingestion@*.service
